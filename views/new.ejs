  <body>
    <h1>Create New Task</h1>
    <br />
    <form method="post" action="/tasks" class="row g-3">
      <div class="col-md-6">
        <label for="title" class="form-label">Title</label>
        <input name="newtask[title]" xtype="text" class="form-control" id="title" placeholder="Enter Title" />
      </div>
      <div class="col-md-6">
        <label for="description" class="form-label">Description</label>
        <input name="newtask[description]" type="text" class="form-control" id="description" placeholder="Enter Description" />
      </div>
      <div class="col-md-6">
        <label for="priority" class="form-label">Priority</label>
        <input
          type="text"
          class="form-control"
          id="priority"
          name="newtask[priority]"
        />
      </div>
      <div class="col-md-6">
        <label for="status" class="form-label">Status</label>
        <input
          type="text"
          class="form-control"
          id="status"
          placeholder="Status of the Task"
          name="newtask[status]"
        />
      </div>
      <div class="col-md-6">
        <label for="category" class="form-label">Category</label>
        <input type="text" class="form-control" id="category" name="newtask[category]" />
      </div>
      <div class="col-md-2">
        <label for="created_at" class="form-label">Created At</label>
        <input type="date" class="form-control" id="created_at" name="newtask[created_at]"/>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-secondary">Create New Task</button>
      </div>
    </form>
